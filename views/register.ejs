<!DOCTYPE html>
<html>

<head>
	<meta charset="UTF-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>UniFest</title>
	
	<!-- Favicon -->
	<link rel="icon" href="/images/favicon.png" type="image/x-icon">
	
	<!-- Stylesheets de bootstrap -->
	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
	
	<!-- Scripts -->
	<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
	<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
	<script src="/javascripts/register.js"></script>
	<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
</head>

<body>
	<div class="container-fluid">
		<div class="row min-vh-100">
			
			<!-- Parte izquierda -->
			<div class="col-lg-6 text-center d-flex align-items-center justify-content-center">
				<div>
					<h1>Bienvenido a</h1>
					<h1 class="h1">UNIFEST</h1>
					<div class="container my-4">
						<img
							src="./images/logoComplu.jpg"
							class="rounded mx-auto d-block w-50"
							alt="Logo Complutense"
						/>
					</div>
				</div>
			</div>
			
			<!-- Parte derecha -->
			<div class="col-lg-6 text-bg-dark d-flex align-items-center justify-content-center">
				<div class="w-75 text-center p-5">
					<h1 class="h2">Regístrate</h1>
					
					<!-- Formulario registro -->
					<form id="formRegister">
						
						<div class="mb-3">
							<label for="nombre" class="form-label">Nombre y apellido:</label>
							<input 
								type="text" 
								class="form-control" 
								id="nombre" 
								placeholder="Introduzca su nombre" 
								name="nombre" 
								autocomplete="name" 
							/>
						</div>
						
						<div class="mb-3">
							<label for="telefono" class="form-label">Teléfono:</label>
							<input 
								type="text" 
								class="form-control" 
								id="telefono" 
								placeholder="Introduzca su teléfono" 
								name="telefono" 
								autocomplete="tel" 
							/>
						</div>
						
						<div class="mb-3">
							<label for="correo" class="form-label">Correo:</label>
							<input 
								type="email" 
								class="form-control" 
								id="correo" 
								placeholder="Introduzca su correo" 
								name="correo" 
								autocomplete="email" 
							/>
						</div>
						
						<div class="mb-3">
							<label for="pwd" class="form-label">Contraseña:</label>
							<input 
								type="password" 
								class="form-control" 
								id="pwd" 
								placeholder="Introduzca su contraseña" 
								name="pwd" 
								autocomplete="new-password" 
							/>
						</div>
						
						<div class="mb-3">
							<label for="confPwd" class="form-label">Confirma la contraseña:</label>
							<input 
								type="password" 
								class="form-control" 
								id="confPwd" 
								placeholder="Repita la contraseña" 
								name="confPwd" 
								autocomplete="new-password" 
							/>
						</div>
						
						<div class="mb-3">
							<label for="facultad" class="form-label">Facultad:</label>
							<select class="form-select" id="facultad" name="facultad" >
								<% todasFacultades.forEach(facultad => { %>
									<option value="<%= facultad.ID %>">
										<%= facultad.nombre %>
									</option>
								<% }) %>
							</select>
						</div>
						
						<div class="form-check my-3">
							<input 
								class="form-check-input" 
								type="checkbox" 
								id="organizador" 
								name="organizador"
							/>
							<label for="organizador" class="form-check-label">
								Soy organizador
							</label>
						</div>
						
						<div class="mb-3">
							<button type="submit" class="btn btn-primary w-100">
								Enviar
							</button>
						</div>
						
					</form>
				</div>
			</div>
			
		</div>
	</div>
</body>
</html>
